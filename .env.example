# AWS Configuration
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=your_access_key_here
AWS_SECRET_ACCESS_KEY=your_secret_key_here
AWS_S3_BUCKET_NAME=hfi-rfq-uploads
AWS_S3_BUCKET_REGION=us-east-1

# AWS Lambda (for presigned URL generation)
AWS_LAMBDA_PRESIGNED_URL_FUNCTION=hfi-generate-presigned-url

# Sanity.io CMS
NEXT_PUBLIC_SANITY_PROJECT_ID=your_project_id
NEXT_PUBLIC_SANITY_DATASET=production
SANITY_API_TOKEN=your_api_token_here

# Application
NEXT_PUBLIC_SITE_URL=https://hfimfg.com

# API Configuration
# Production: Use AWS API Gateway endpoint for presigned URL generation
# Example: https://abc123.execute-api.us-east-1.amazonaws.com/production/api/presigned-url
# Development: Use /api/presigned-url (requires removing 'output: export' from next.config.js)
NEXT_PUBLIC_API_URL=https://your-api-gateway-url.amazonaws.com/production/api/presigned-url

# Email (for RFQ submissions)
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USER=rfq@hfimfg.com
SMTP_PASSWORD=your_smtp_password
SMTP_FROM_EMAIL=rfq@hfimfg.com
SMTP_TO_EMAIL=sales@hfimfg.com

# Security
ENCRYPTION_KEY=your_encryption_key_here

# Development
NODE_ENV=development
